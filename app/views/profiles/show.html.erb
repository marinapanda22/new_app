<h1><%= @user.name %></h1>
<% if can? :update, @user %>
  <%=  link_to "Изменить профиль", edit_profile_path(@user[:id]), class: "btn btn-success" %>
<% end %>
<br>

<% @user.posts.each do |post|%>
    <%= post.title %>
    <div class="img"><%= link_to image_tag(post.image.large), post_path(post) %></div>
<% end %>
<br>

<%= render 'posts/form', post: @post %>